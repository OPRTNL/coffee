<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h1>Edit your profil</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= form_for(@user) do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= cl_image_tag current_user.photo, height: 250, width: 250, crop: :fill %>
        <%= f.file_field :photo %>
      </div>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
