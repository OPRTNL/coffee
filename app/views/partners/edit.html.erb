<h2> Vous avez actuellement <%= @orders_pending %> cafés en attente</h2>

  <% if @order.nil? %>
  <% else %>
    <%= link_to "un café servi", consume_order_path(@order), method: :patch, class: "btn-ghost"  %>
  <% end %>

  <%= link_to "Mon compteur display", counter_partner_path, class: "btn-ghost"  %>

  <%= simple_form_for @partner do |f| %>

    <% if @partner.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @partner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="container-partner">
  <div class="form-partner">
    <div class="form-intro">
      <h2>Modifier les paramètres du café</h2>
    </div>

    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>

    <div class="partner-form-container">
      <div>
        <%= cl_image_tag @partner.photo, height: 300, width: 300, crop: :fill %>
        <%= f.file_field :photo %>
      </div>
    </div>
    <div>
      <%= f.submit "Enregistrer", class: "btn-ghost" %>
    </div>
  <% end %>
  </div>
</div>

