<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= cl_image_tag current_user.photo, height: 250, width: 250, crop: :fill %>
    </div>
  </div>
  <div class="">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
         <%= current_user.first_name %>
         <h2><%= current_user.last_name %></h2>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12 center">
        <i class="fas fa-at"></i><%= current_user.email %>
      </div>

      <hr>

      <div class="col-sm-12 col-md-12 col-lg-12 center">
        <i class="fas fa-phone"></i><%= current_user.phone_number %>
      </div>
    </div>
  </div>

  <hr>

  <div class="row deconnect">
    <div class="col-sm-12 col-md-12 col-lg-12">
       <p> <%= link_to "Deconnect", destroy_user_session_path, method:"delete"  %></p>
    </div>
  </div>
</div>
